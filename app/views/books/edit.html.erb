<div class='container'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>
                <h1>Editing Book</h1>
                <div class="form-group">
                    <label for="book_title">Title</label>
                    <%= f.text_field :title, class:"form-control book_title", id:"book_title", placeholder:"Title" %>
                </div>
                
                <div class="form-group">
                    <label for="book_opinion">Opinion</label>
                    <%= f.text_area :body, class:"form-control book_body", id:"book_opinion", placeholder:"Opinion" %>
                </div>
                
                <div class="form-group">
                    <%= f.submit 'Update Book', class:"btn btn-success" %>
                </div>
            <% end %>    
  		
  		<%= link_to 'Show', @book %> |
  		<%= link_to 'Back', books_path, class: "back" %>
  </div>
</div>